           <table class="table table-striped">
               <thead>
                   <tr>
                       <th>ID</th>
                       <th>店舗名</th>
                       <th>郵便番号</th>
                       <th>住所</th>
                       <th>電話番号</th>
                       <th>操作</th>
                   </tr>
               </thead>
               <tbody>
                   <tr th:each="shop : ${shopPage.content}">
                       <td th:text="${shop.id}"></td>
                       <td th:text="${shop.name}"></td>
                       <td th:text="${shop.postalCode}"></td>
                       <td th:text="${shop.address}"></td>
                       <td th:text="${shop.phoneNumber}"></td>
                       <td><a th:href="@{/admin/shops/__${shop.id}__}" class="btn btn-link">詳細</a></td>
                   </tr>
               </tbody>
           </table>
           <div th:if="${shopPage.totalPages > 1}" class="d-flex justify-content-center">
               <nav>
                   <ul class="pagination">
                       <li th:classappend="${shopPage.first} ? 'disabled'">
                           <a th:href="@{/admin/shops(page=${shopPage.number - 1})}" class="page-link">前</a>
                       </li>
                       <li th:each="i : ${#numbers.sequence(0, shopPage.totalPages - 1)}" th:classappend="${i == shopPage.number} ? 'active'">
                           <a th:href="@{/admin/shops(page=${i})}" class="page-link" th:text="${i + 1}"></a>
                       </li>
                       <li th:classappend="${shopPage.last} ? 'disabled'">
                           <a th:href="@{/admin/shops(page=${shopPage.number + 1})}" class="page-link">次</a>
                       </li>
                   </ul>
               </nav>
           </div>
       </div>
